<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#040720"> <!-- Light gray background color -->

    <TextView
        android:id="@+id/analysisTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Analysis"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/analysisResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result: None"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/analysisConfidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confidence Score: 0.0"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/analysisRecommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommendation: None"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
